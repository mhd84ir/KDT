
<style>
    .btn-primary {
  color: #fff;
  background-color: #892e33;
  border-color: #892e33;
}
    td,
    tr {

        border: 0.5px solid rgb(0, 0, 0);
       
        text-align: center;
    }

    tr:hover {
        background-color: rgb(188, 189, 182);
        color: rgb(1, 1, 1);

    }

    .selected {
        background-color: rgb(170, 174, 164);
        color: rgb(2, 2, 2);
    }

    .row>* {

        padding-right: 0 !important;
        padding-left: 2px !important;

    }




</style>


<div class="card p-4" style="zoom: 90%;">


    <div class="row p-4">

    <div class="row p-4">

        <div class=" ">
            <div class="row alert alert-primary p-4 " >
                <p class="text-center alert alert-success fs-large text-black"  >لیست شرکت ها</p>








        <div class="col-12 card mt-5   " style="overflow-x: scroll;">
            <div class="row justify-content-center text-center">
                <div class="col-4 mt-4  ">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="برای جستجو متن رو وارد کنید ..."
                            aria-label="Recipient's username" aria-describedby="button-addon2" name="childname" id="searchBox-3" >
                        <button class="btn btn-primary" type="button" id="basic-text1">جستوجو</button>
                    </div>
                </div>

            </div>



            <a href="/Documentss/Sherkat" class="btn btn-success w-25" style="margin-right: 20px;" >اضافه کردن شرکت  + </a>




        <div class="card-body " style="zoom: 90%;">

            <table class="table table-bordered " id="table-3">

                <tr style="background-color: whitesmoke;">
                    <th>ردیف</th>
                    <th>نام شرکت</th>
                    <th>شماره ثبت</th>
                    <th>شناسه ملی</th>
                    <th>کد پستی</th>
                    <th>نشانی</th>
                    <th>عملیات</th>


                </tr>


                    @{
                        int i = 1;
                    }

                    @foreach (var item in ViewBag.Doc)
                    {
                            <tr>
                            <td>@i</td>
                            <td>@item.NameSherkat</td>
                             <td>@item.ShomareSabt</td>
                              <td>@item.ShenaseMeli</td>
                               <td>@item.Codeposti</td>
                               <td>@item.Neshani</td>


                                 <td style="white-space: nowrap !important;">
                            <a href="/MarkazAmar/DeleteSh/@item.Id" class="btn btn-danger"
                                onclick="return confirm('آیا از حذف مطمن هستید؟')">حذف </a>

                                 <a href="/MarkazAmar/EditSherkat/@item.Id" class="btn btn-warning" >ویرایش </a>
                               


                                </td>


                                 </tr>
                        i++;


                    }








            </table>

        </div>


    </div>

</div>

